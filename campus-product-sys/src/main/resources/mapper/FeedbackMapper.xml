<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kmbeast.mapper.FeedbackMapper">

    <insert id="submit">
        INSERT INTO feedback (id,user_id,title,content,picture_list,reply,admin_reply_status,created_time,updated_time,type)
        VALUES (#{id},#{userId},#{title},#{content},#{imageList},#{replyContent},#{isReply},#{createTime},#{updateTime},#{type})
    </insert>


    <!-- 管理员回复 -->
    <update id="updateReply" >
        UPDATE feedback
        SET content = #{replyContent},
            admin_reply_status = #{isReply},
            updated_time = #{replyTime}
        WHERE id = #{id}
    </update>

    <!--分页查询信息-->
    <select id="query" resultMap="BaseResultMap">

        SELECT
        f.*,
        u.user_name,
        u.user_avatar
        FROM feedback f
        LEFT JOIN user u ON u.id = f.user_id
        <where>
        <if test="userId != null">
            AND f.user_id = #{userId}
        </if>
        <if test="type != null and type != ''">
            AND f.type = #{type}
        </if>
        <if test="isReply != null">
            AND f.is_reply = #{isReply}
        </if>

        <if test="current != null and size != null">
            LIMIT #{current},#{size}
        </if>
        </where>
    </select>

    <!--满足分页条件的数据总项-->
    <select id="queryCount" resultType="integer">

        SELECT COUNT(*)
        FROM feedback f

        <where>
            <if test="userId != null">
                AND f.user_id = #{userId}
            </if>
            <if test="type != null and type != ''">
                AND f.type = #{type}
            </if>
            <if test="isReply != null">
                AND f.is_reply = #{isReply}
            </if>

        </where>

    </select>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.kmbeast.pojo.vo.FeedbackVO">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="imageList" column="picture_list"/>
        <result property="replyContent" column="reply"/>
        <result property="isReply" column="admin_reply_status"/>
        <result property="type" column="type"/>
        <result property="createTime" column="created_time"/>
        <result property="replyTime" column="updated_time"/>
        <result property="userName" column="user_name"/>
        <result property="userAvatar" column="user_avatar"/>
    </resultMap>


</mapper>
